{
  "Arn": "arn:aws:iam::aws:policy/aws-service-role/AmazonDevOpsGuruServiceRolePolicy",
  "CreateDate": "2020-12-01T10:24:42Z",
  "DefaultVersionId": "v3",
  "IsAttachable": true,
  "Path": "/aws-service-role/",
  "PolicyId": "ANPAZKAPJZG4LOGPH224B",
  "PolicyName": "AmazonDevOpsGuruServiceRolePolicy",
  "PolicyVersion": {
    "CreateDate": "2021-11-01T23:24:23Z",
    "Document": {
      "Statement": [
        {
          "Action": [
            "ssm:GetOpsItem",
            "ssm:UpdateOpsItem"
          ],
          "Condition": {
            "StringEquals": {
              "aws:ResourceTag/DevOps-GuruInsightSsmOpsItemRelated": "true"
            }
          },
          "Effect": "Allow",
          "Resource": "*",
          "Sid": "AllowAccessOpsItem"
        },
        {
          "Action": [
            "autoscaling:DescribeAutoScalingGroups",
            "cloudformation:DescribeStacks",
            "cloudformation:GetTemplate",
            "cloudformation:ListImports",
            "cloudformation:ListStackResources",
            "cloudformation:ListStacks",
            "cloudtrail:LookupEvents",
            "cloudwatch:DescribeAlarms",
            "cloudwatch:DescribeAnomalyDetectors",
            "cloudwatch:GetDashboard",
            "cloudwatch:GetMetricData",
            "cloudwatch:ListDashboards",
            "cloudwatch:ListMetrics",
            "codedeploy:BatchGetDeployments",
            "codedeploy:GetDeploymentGroup",
            "codedeploy:ListDeployments",
            "config:DescribeConfigurationRecorderStatus",
            "config:GetResourceConfigHistory",
            "events:ListRuleNamesByTarget",
            "organizations:ListChildren",
            "organizations:ListDelegatedAdministrators",
            "organizations:ListRoots",
            "xray:GetServiceGraph"
          ],
          "Effect": "Allow",
          "Resource": "*"
        },
        {
          "Action": [
            "events:PutRule",
            "events:PutTargets"
          ],
          "Effect": "Allow",
          "Resource": "arn:aws:events:*:*:rule/DevOps-Guru-managed-*",
          "Sid": "AllowPutTargetsOnASpecificRule"
        },
        {
          "Action": [
            "ssm:AddTagsToResource"
          ],
          "Effect": "Allow",
          "Resource": "arn:aws:ssm:*:*:opsitem/*",
          "Sid": "AllowAddTagsToOpsItem"
        },
        {
          "Action": [
            "ssm:CreateOpsItem"
          ],
          "Effect": "Allow",
          "Resource": "*",
          "Sid": "AllowCreateOpsItem"
        }
      ],
      "Version": "2012-10-17"
    },
    "IsDefaultVersion": true,
    "VersionId": "v3"
  },
  "UpdateDate": "2021-11-01T23:24:23Z"
}
